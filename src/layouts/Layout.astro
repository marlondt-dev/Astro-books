---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';

interface Props {
	title: string
}

const {title} = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<div>
		<slot />
		</div>
	</body>
</html>

<style>
	html{
		margin: 0;
		width: 100%;
		height: 100%;
		color: white;
		background: rgb(24, 3, 36);
	}
	body{
	@apply grid place-content-center;
	}

	body > div {
		@apply container; 
		margin:  5em 0;
	}
</style>
